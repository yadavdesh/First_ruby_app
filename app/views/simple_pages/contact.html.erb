<h1>Contact Us</h1>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="contact-form">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, :required => true, class: "form-control", placeholder: "Enter your name name" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, :required => true, type:'email', class: "form-control", placeholder: "Enter email" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, :required => true, class: "form-control", placeholder: "Enter message" %>
    </div>
    <%= form.submit "Send", class: "form_label form-group" %>
  </div>
<%end%>
