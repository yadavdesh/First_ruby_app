

<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm">
      <%= image_tag(product.image_url, class:"img-fluid") unless product.image_url.nil? %>
      <h1><%= link_to product.name, product %></h1>
      <p><%= product.description %></p>
      <strong>$ <%= product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
