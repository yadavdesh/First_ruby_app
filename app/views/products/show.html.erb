<div class="container-fluid">

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-6">
    <%= image_tag(@product.image_url) %>
  </div> <!--end of col div-->
  <div class="col-sm-6">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>


    <p>Average Rating:
    <div class="rated" data-score="<%= @product.average_rating %>"></div>
    </p>

  </div> <!--end of col div-->
</div> <!--end of row div -->

<div>
  <div class="navigation-btn>"
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>

  <!--
    <%= @product.highest_rating_comment %>
-->
  <!-- new comment section-->
    <%= render 'new_comment' %>

  <!-- All comment section-->
    <%= render 'comments' %>
