<div class="container-fluid">


<div class="row">
  <div class="col-sm-6">
    <%= image_tag(@product.image_url, class: "img-zoom", data_zoom_image: "/assets/"+@product.image_url) %>
  </div> <!--end of col div-->
  <div class="col-sm-6">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>


    <p>Average Rating:
    <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div>
    </p>

    <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>

  </div> <!--end of col div-->
  <p hidden>data-product-id="<%= @product.id %>" </p>
</div> <!--end of row div -->

<div>
  <div class="navigation-btn">
    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
    <% end %>
    <%= link_to 'Back', products_path %>
  </div>

  <!--
    <%= @product.highest_rating_comment %>
-->
  <!-- new comment section-->
    <%= render 'new_comment' %>

<!--alert for a new added comment-->
<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
  <!-- All comment section-->
    <%= render 'comments' %>

  <!-- pagination rendre -->

    <%= will_paginate @comments %>
